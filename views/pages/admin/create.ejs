<div class="content">


    <%- partial('../partials/sidebar.ejs') %>

        <div style="overflow-y: scroll; height: 100vh;">

            <div class="container">

                <header>
                    Create new <%= title %>
                </header>
                <form id="create-form" action="/<%= title %>" <%=title %>" method="POST" onsubmit="OnSubmit">
                    <% keys.forEach(function name(key) { %>
                        <% if (key==="createdAt" || key==="updatedAt" ) return; %>
                            <% let type=attributes[key].ofType || attributes[key].type %>
                                <% if (key==="Email" ) { %>
                                    <div class="form-div">

                                        <input required type="email" placeholder="<%= key %>" name="<%= key %>"
                                            id="<%= key %> " class="form-input number">
                                    </div>
                                    <% return;} %>

                                        <% if (type==="string" ) { %>
                                            <div class="form-div">

                                                <input type="text" required name="<%= key %>" placeholder="<%= key %>"
                                                    id="<%= key %> " class="form-input number">
                                            </div>
                                            <% return;} %>
                                                <% if (type==="number" ) { %>
                                                    <div class="form-div">

                                                        <input type="number" required min=1 name="<%= key %>"
                                                            placeholder="<%= key %>" id="<%= key %> "
                                                            class="form-input number">
                                                    </div>
                                                    <% return;} %>

                                                        <% if (type==="model" ) { %>
                                                            <div class="form-div">

                                                                <input type="number" required min=1 name="<%= key %>"
                                                                    data-model="<%= key %>" placeholder="<%= key %>"
                                                                    id="<%= key %> "
                                                                    class="form-input number relic-model">
                                                            </div>
                                                            <% return;} %>


                                                                <% if (type==="select" ) { %>
                                                                    <div class="form-div">

                                                                        <label for="<%= key %>">
                                                                            <%= key %>
                                                                        </label>
                                                                        <select required class="form-input select"
                                                                            name="<%= key %>" id="<%= key %>">
                                                                            <% attributes[key].isIn.forEach(element=> {
                                                                                %>

                                                                                <option value="<%= element %>">
                                                                                    <%= element %>
                                                                                </option>

                                                                                <% }); %>
                                                                        </select>

                                                                    </div>
                                                                    <% return;} %>


                                                                        <% if (type==="boolean" ) { %>
                                                                           
                                                                            <% return;} %>

                                                                                <% }) %>

                                                                                    <button>
                                                                                        Create
                                                                                    </button>
                </form>
            </div>

        </div>


</div>

<%- partial('../partials/form.ejs') %>
    <script>

        let id = "create-form", action = "/<%= title %>"
        document.getElementById(id).onsubmit = () => OnSubmit(event, "POST", '/<%= title %>');

    </script>