<div class="form-div">
    <form action="/admin/html/signup" method="post"  style="padding: 2em 1em; height: 100vh; overflow: scroll">


        <h1>Sign Up</h1>

        <fieldset>
            <legend><span class="number">1</span>Your basic info</legend>
            <label for="name">Name:</label>
            <input type="text" id="name" name="fullName">

            <label for="mail">Email:</label>
            <input type="email" id="mail" name="emailAddress">

            <label for="password">Password:</label>
            <input type="password" id="password" name="password">
            <label for="name">Admin Key:</label>
            <input type="text" id="admin-ket" name="adminKey">
   
        <button type="submit">Sign Up</button>
        <p>Already an admin? <a href="/admin/html/login">login</a></p>
        <% if (hasError) { %>
            <p style="color: red" > <%= errorMessage %> </p>
            <%} %>
    </form>

</div>